{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "paths": {
      "@app/*": ["src/app/*"],
      "@infra/*": ["src/app/_infra/*"],
      "@models/*": ["src/app/_infra/core/models/*"],
      "@core/*": ["src/app/_infra/core/*"],
      "@ui/*": ["src/app/_infra/ui/*"],
      "@store/*": ["src/app/_infra/store/*"],
      "@lab/*": ["src/app/lab/*"],
      "@environments/*": ["src/environments/*"],
      "@testing/*": ["src/testing/*"],
      "@danskill/contract": ["../contract/src"],
      "crypto": ["../../node_modules/crypto-js"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "allowEmptyCodegenFiles": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
